<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pitapany.web.dao.MemberProfileDao">
	<select id="getList" resultType="com.pitapany.web.entity.MemberProfile">
		SELECT *
		FROM MemberProfile
		WHERE
		memberId = #{memberId}
	</select>

	<select id="get" resultType="com.pitapany.web.entity.MemberProfile">
		SELECT *
		FROM
		`pitapanydb`.`MemberProfile`
		WHERE id = #{id}
	</select>

	<insert id="add" parameterType="com.pitapany.web.entity.MemberProfile">
		<selectKey keyProperty="id" order="BEFORE" resultType="String">
			SELECT IFNULL(max(cast(id as unsigned))+1,'1') id FROM
			MemberProfileBoard
		</selectKey>
		INSERT INTO `pitapanydb`.`MemberProfile`
		(
		`id`,
		`job`,
		`img`,
		`backgroundImg`,
		`status`,
		`bloodtype`,
		`kakaotalkId`,
		`facebookUrl`,
		`instagramUrl`,
		`memberId`
		)
		VALUES
		(
		#{id},
		#{job},
		#{img},
		#{backgroundImg},
		#{status},
		#{bloodtype},
		#{kakaotalkId},
		#{facebookUrl},
		#{instagramUrl},
		#{memberId}
		)
	</insert>

	<update id="update" parameterType="com.pitapany.web.entity.MemberProfile">
		UPDATE
		`pitapanydb`.`MemberProfile`
		SET
		`job` = #{job},
		`img` = #{img},
		`backgroundImg` = #{backgroundImg},
		`status` = #{status},
		`bloodtype` = #{bloodtype},
		`kakaotalkId` = #{kakaotalkId},
		`facebookUrl` =	#{facebookUrl},
		`instagramUrl` = #{instagramUrl},
		`memberId` = #{memberId}
		WHERE `id` = #{id}

	</update>

	<delete id="delete">
		DELETE FROM MemberProfile
		WHERE id = #{id}
	</delete>

</mapper>
