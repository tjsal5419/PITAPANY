<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pitapany.web.dao.AccompanyStyleDao">
	<select id="getList" resultType="com.pitapany.web.entity.AccompanyStyle">
		SELECT *
		FROM
		`pitapanydb`.`AccompanyStyle`
	</select>

	<select id="get" resultType="com.pitapany.web.entity.AccompanyStyle">
		SELECT *
		FROM
		`pitapanydb`.`AccompanyStyle`
		WHERE id=#{id}
	</select>

	<insert id="add" parameterType="com.pitapany.web.entity.AccompanyStyle">
		<selectKey keyProperty="id" order="BEFORE" resultType="String">
			SELECT IFNULL(max(cast(id as unsigned))+1,'1') id FROM AccompanyStyle
		</selectKey>
		INSERT INTO
		`pitapanydb`.`AccompanyStyle`
		(
		`styleId`,
		`accompanyBoardId`
		)
		VALUES
		(
		#{styleId},
		#{accompanyBoardId}
		);
	</insert>

	<update id="update" parameterType="com.pitapany.web.entity.AccompanyStyle">
		UPDATE
		`pitapanydb`.`AccompanyStyle`
		SET
		`styleId` = #{styleId},
		`accompanyBoardId` = #{accompanyBoardId}
		WHERE `styleId` = #{styleId}
		AND `accompanyBoardId` = #{accompanyBoardId};

	</update>

	<delete id="delete">
		DELETE FROM AccompanyStyle
		WHERE id=#{id}
	</delete>

</mapper>
