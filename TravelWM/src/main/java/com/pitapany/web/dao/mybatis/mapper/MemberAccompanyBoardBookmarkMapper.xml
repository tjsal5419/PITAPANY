<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pitapany.web.dao.MemberAccompanyBoardBookmarkDao">
	<select id="getList" resultType="com.pitapany.web.entity.MemberAccompanyBoardBookmark">
		SELECT * 
		FROM MemberAccompanyBoardBookmark
		limit #{page},6
	</select>

	<select id="get" resultType="com.pitapany.web.entity.MemberAccompanyBoardBookmark">
		SELECT *
		FROM MemberAccompanyBoardBookmark
		WHERE memberId = #{memberId}
	</select>
	
	<insert id="add" parameterType="com.pitapany.web.entity.MemberAccompanyBoardBookmark">
		<selectKey keyProperty="id" order="BEFORE" resultType="String">
			SELECT IFNULL(max(cast(id as unsigned))+1,'1') id FROM MemberAccompanyBoardBookmark
		</selectKey>
		INSERT INTO
		MemberAccompanyBoardBookmark
		(
		`memberId`,
		`accompanyBoardId`
		)
		VALUES
		(
		#{memberId},
		#{accompanyBoardId}
		)
	</insert>

	<delete id="delete">
		DELETE FROM MemberAccompanyBoardBookmark
		WHERE memberId = #{memberId}
	</delete>
	
	<select id="count" resultType="Integer">
		SELECT count(*) count
		FROM
		`pitapanydb`.`MemberAccompanyBoardBookmark`
	</select>

</mapper>
