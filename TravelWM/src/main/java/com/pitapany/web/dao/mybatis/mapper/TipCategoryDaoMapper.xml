<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pitapany.web.dao.TipCategoryDao">
	<select id="getList" resultType="com.pitapany.web.entity.TipCategory">
		SELECT * 
		FROM `pitapanydb`.`TipCategory`
		ORDER BY cast(id as unsigned)
	</select>
	
	<select id="get" resultType="com.pitapany.web.entity.TipCategory">
		SELECT * 
		FROM `pitapanydb`.`TipCategory`
		WHERE id=#{id}
		ORDER BY cast(id as unsigned)
	</select>

	
	<insert id="add" parameterType="com.pitapany.web.entity.TipCategory">
		<selectKey order="BEFORE" keyProperty="id" resultType="String">
			SELECT IFNULL(max(cast(id as unsigned))+1,'1') id FROM TipCategory
		</selectKey>
			INSERT 
			INTO `pitapanydb`.`Member`
			(`id`,
			`category`
			)
			VALUES
			(
			#{id},
			#{category}
			)
	</insert>
	
	<update id="update" parameterType="com.pitapany.web.entity.TipCategory">
		UPDATE `pitapanydb`.`Member`
		SET
		`category` = #{category}
		WHERE `id` = #{id}
		
	</update>
	
	<delete id="delete">
	  DELETE FROM TipCategory
      WHERE id=#{id}
	</delete>
	
</mapper>
